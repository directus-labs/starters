---
interface HeadlineProps {
  headline?: string;
  className?: string;
  as?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6" | "p" | "span" | "div";
  'data-directus'?: string;
}

const { headline, className = "", as = "p", "data-directus": dataDirectus } = Astro.props;
---

{headline && (
  <component
    is={as}
    class:list={[
      "font-heading text-foreground font-normal text-4xl md:text-5xl lg:text-headline",
      className
    ]}
    data-directus={dataDirectus}
  >
    {headline}
  </component>
)}
