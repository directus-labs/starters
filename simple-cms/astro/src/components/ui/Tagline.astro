---
interface TaglineProps {
  tagline?: string;
  className?: string;
  as?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6" | "p" | "span" | "div";
  'data-directus'?: string;
}

const { tagline, className = "", as = "h2", "data-directus": dataDirectus } = Astro.props;
---

{tagline && (
  <component
    is={as}
    class:list={[
      "font-heading text-accent font-normal uppercase text-lg md:text-xl lg:text-tagline",
      className
    ]}
    data-directus={dataDirectus}
  >
    {tagline}
  </component>
)}
